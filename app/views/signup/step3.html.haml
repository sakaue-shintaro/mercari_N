.first-main
  .first-main__header.width-size
    .first-main__header__imgage
      = link_to ".." do
        = image_tag "fmarket_logo_red.svg",class:"first-main__header__imgage__size"
    .first-main__header__bar
      %ul.first-main__header__bar__ul
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 会員情報
          .first-main__header__bar__ul__box__ten00.redback
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 電話番号認証
          .first-main__header__bar__ul__box__ten111.redback
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name__red お届け先住所入力
          .first-main__header__bar__ul__box__ten222.redback
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 支払い方法
          .first-main__header__bar__ul__box__ten333
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 完了
          .first-main__header__bar__ul__box__ten444

  .first-main__box
    .first-main__box__main
      .first-main__box__main__title
        住所入力
      = form_for @user, url: step4_signup_index_path, method: :get, html: {class: "first-main__box__main__form"} do |f|
        .first-main__box__main__form__top
          .first-main__box__main__form__top__group
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 郵便番号
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :address_number,placeholder: "例）123-4567",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "address_number"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 都道府県
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.select :address_prefecture, User.address_prefectures.keys.to_a,{class: "pre-box"}
            = render partial: 'error-messages', locals: {user: @user, column: "address_prefecture"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 市区町村
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :address_name,placeholder: "例）横浜市緑区",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "address_name"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 番地
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :address_block,placeholder: "例）青山1-1-1",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "address_block"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 建物名
              .first-main__box__main__form__top__group__title__box__nin 任意
            .first-main__box__main__form__top__group__input
              = f.text_field :address_building,placeholder: "例）柳ビル103",class: "input-box"
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 電話
              .first-main__box__main__form__top__group__title__box__nin 任意
            .first-main__box__main__form__top__group__input
              = f.phone_field :address_phone_number,placeholder: "例）09012345678",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "address_phone_number"}
          .first-main__box__main__form__top__button
            = f.submit "次へ進む",class:"submit-scss"

  = render "footer"