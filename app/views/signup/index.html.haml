.first-main
  .first-main__header
    .first-main__header__imgage
      .first-main__header__imgage__margin
        = link_to ".." do
          = image_tag "fmarket_logo_red.svg",class:"first-main__header__imgage__size"

  .first-main__box
    .first-main__box__main
      .first-main__box__main__title
        新規会員登録
      .first-main__box__main__form
        .first-main__box__main__form__top
          .first-main__box__main__form__top__mail
            = link_to "/signup/step1" do
              .first-main__box__main__form__top__mail__flex
                .first-main__box__main__form__top__mail__flex__icon
                  = icon('far', 'envelope', class: "mail-icon")
                .first-main__box__main__form__top__mail__flex__text
                  メールアドレスで登録する

          .first-main__box__main__form__top__facebook
            = link_to user_facebook_omniauth_authorize_path ,method: :post, class:"facebook-box" do
              = icon('fab', 'facebook-square', class:"facebook-icon")
              .first-main__box__main__form__top__facebook__text
                Facebookで登録する

          .first-main__box__main__form__top__google
            = link_to user_google_oauth2_omniauth_authorize_path ,method: :post, class:"google-box" do
              = icon('fab', 'google', class:"google-icon")
              .first-main__box__main__form__top__google__text
                Googleで登録する
            
  .first-main__empty

  = render "signup/footer"
