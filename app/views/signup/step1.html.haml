                %option{value:"1994"}1994
                %option{value:"1993"}1993
                %option{value:"1992"}1992
                %option{value:"1991"}1991
                %option{value:"1990"}1990
              .first-main__box__main__form__top__group__input__year 年
              = f.select :birthdate_month, nil, {},{class: "year-box", id: "month"} do
                %option{value:""}--
                %option{value:"1"}1
