.first-main
  .first-main__header.width-size
    .first-main__header__imgage
      = link_to ".." do
        = image_tag "fmarket_logo_red.svg",class:"first-main__header__imgage__size"
    .first-main__header__bar
      %ul.first-main__header__bar__ul
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name__red 会員情報
          .first-main__header__bar__ul__box__ten.redback
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 電話番号認証
          .first-main__header__bar__ul__box__ten1
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name お届け先住所入力
          .first-main__header__bar__ul__box__ten2
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 支払い方法
          .first-main__header__bar__ul__box__ten3
        %li.first-main__header__bar__ul__box
          .first-main__header__bar__ul__box__name 完了
          .first-main__header__bar__ul__box__ten4

  .first-main__box
    .first-main__box__main
      .first-main__box__main__title
        会員情報入力
      = form_for @user, url: step2_signup_index_path, method: :get, html: {class: "first-main__box__main__form"} do |f|
        .first-main__box__main__form__top
          .first-main__box__main__form__top__group
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name ニックネーム
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :nickname,placeholder: "例）メルカリ太郎",class: "input-box",value: "#{session[:nickname]}"
            = render partial: 'error-messages', locals: {user: @user, column: "nickname"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name メールアドレス
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.email_field :email,placeholder: "PC・携帯どちらでも可",class: "input-box",value: "#{session[:email]}"
            = render partial: 'error-messages', locals: {user: @user, column: "email"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name パスワード
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.password_field :password,placeholder: "6文字以上の半角英数字",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "password"}
            .first-main__box__main__form__top__group__info ※ 英字と数字の両方を含めて設定してください
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name パスワード（確認）
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.password_field :password_confirmation,placeholder: "6文字以上の半角英数字",class: "input-box"
            = render partial: 'error-messages', locals: {user: @user, column: "password_confirmation"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__hedding
              本人確認
            .first-main__box__main__form__top__group__in
              安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name お名前（全角）
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :last_name,placeholder: "例）山田",class: "input-box__flex"
              = f.text_field :first_name, placeholder: '例) 彩', class: "input-box__flex",id:"minute"
            = render partial: 'error-messages', locals: {user: @user, column: "last_name"}
            = render partial: 'error-messages', locals: {user: @user, column: "first_name"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name お名前カナ（全角）
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.text_field :last_name_kana,placeholder: "例）ヤマダ",class: "input-box__flex"
              = f.text_field :first_name_kana, placeholder: '例) アヤ',class: "input-box__flex",id:"minute"
            = render partial: 'error-messages', locals: {user: @user, column: "last_name_kana"}
            = render partial: 'error-messages', locals: {user: @user, column: "first_name_kana"}
          .first-main__box__main__form__top__group
          #margin
            .first-main__box__main__form__top__group__title
              .first-main__box__main__form__top__group__title__name 生年月日
              .first-main__box__main__form__top__group__title__box 必須
            .first-main__box__main__form__top__group__input
              = f.select :birthdate_year, nil, {},{class: "year-box", id: "year"} do
                %option{value:""}--
                %option{value:"2019"}2019
